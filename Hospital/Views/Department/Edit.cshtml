@using DAL.Models;
@model Department

@if (User.IsInRole("Admin"))
{
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Edit Provider</h2>
        </div>

        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control mb-3" hidden="hidden" asp-for="DepartmentId">
                    <span asp-validation-for="DepartmentId" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Name">Procedure Name</label>
                    <input type="text" class="form-control mb-3" asp-for="Name">
                    <span asp-validation-for="Name" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" text-wrap:normal" type="text" placeholder="Add description of department"></textarea>
                    <span asp-validation-for="Description" class="alert-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
            <a asp-controller="MedicalProcedure" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To Departments</a>
        </form>
    </div>
}