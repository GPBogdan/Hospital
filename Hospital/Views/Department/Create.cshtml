@using DAL.Models;
@model Department

@if (User.IsInRole("Admin"))
{
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Create Doctor</h2>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name">Department Name</label>
                    <input type="text" class="form-control" asp-for="Name" aria-required="true" placeholder="Therapy">
                    <span asp-validation-for="Name" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" text-wrap:normal" type="text" placeholder="Add description of department"></textarea>
                    <span asp-validation-for="Description" class="alert-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Add Department</button>
            <a asp-controller="Department" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To Departments</a>
        </form>

    </div>
}
